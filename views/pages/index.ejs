<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../layout/head') %>
  <link rel="stylesheet" href="/styles/modules/searches/new.css">
</head>
<body>
  <%- include('../layout/header') %>
  <main>
    <h2 id="title"><span id="count"><%= count %></span> Saved Books</h2>
    <ul class="search-results">
      <% result.forEach(book => { %>
      <li data-book-id="<%= book.isbn %>">
        <div class="book-container">
          <img src=<%= book.image_url %>>
          <section>
            <h3><%= book.title %></h3>
            <span><%= book.author %></span>
            <p class="desc"><%= book.description %></p>
            <p><%= book.isbn %></p>
          </section>
          </section>
      </li>
      <button class="detail-button"><a href="/books/<%= book.id %>">View Details</a></button>
      <% }) %>
    </ul>
  </main>
  <%- include('../layout/footer') %>
</body>
</html>