<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../layout/head') %>
  <link rel="stylesheet" href="styles/modules/books/show.css">
</head>
<body>
  <%- include('../layout/header') %>
  <main>
    <h4>Saved Books</h4>
    <p><span id="count"><%= count %></span> saved books</p>
    <ul id="book-list">
      <% result.forEach(book => { %>
        <li class="book-items" data-book-id="<%= book.id %>">
          <%- include('books/detail', {book: book}) %>
          <p class="detail-button"><a href="/books/<%= book.id %>">View Details</a></p>
        </li>
      <% }) %>
    </ul>
  </main>
  <%- include('../layout/footer') %>
</body>
</html>