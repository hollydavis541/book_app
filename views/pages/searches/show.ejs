<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../layout/head') %>
  <link rel="stylesheet" href="../../../public/styles/modules/searches/show.css">
  <link rel="stylesheet" href="../../../public/styles/modules/books/show.css">
</head>
<body>
  <%- include('../../layout/header') %>
  <main>
    <h4>Search Results</h4>
    <ul id="book-list" class="search-results">
      <% searchResults.forEach(book => { %>
      <li data-book-id="<%= book.isbn %>">
        <%- include('../books/detail', {book: book}) %>
        <button class="select-button">Select This Book</button>
        <%- include('../books/edit', {book: book, bookshelves: null, formAction: 'create'}) %>
      </li>
      <% }) %>
    </ul>
  </main>
  <%- include('../../layout/footer') %>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="../../../public/js/app.js"></script>
</html>